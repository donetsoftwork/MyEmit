{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "PocoEmit/PocoEmit.csproj"
          ],
          "exclude": [ "Tests/*" ]
        }

      ],
      "dest": "api",
      "filter": "../filterconfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "images/**" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "default(zh-cn)",
      "templates/chinese",
      "modern",
      "template"
    ],
    "globalMetadata": {
      "_appName": "MyEmit",
      "_appTitle": "简单对象Emit工具",
      "_appFooter": "<span>Copyright (c) MyEmit All Rights Reserved</span>",
      "_enableSearch": false,
      "pdf": false
    }
  }
}